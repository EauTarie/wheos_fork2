{% extends 'base.html.twig' %}

{% block title %}Files{% endblock %}

{% block body %}
    <h1>Files</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ file.path }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ file.createdAt ? file.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ file.updatedAt ? file.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_file_download', {'path': file.path}) }}">bonjour</a> <!-- Passage controller, mais chemin incorrect (/file/upload/public/uploads) ou alors avec nouveau controller : (https://127.0.0.1:8000/?path=uploads/459e8b3ea40fcc27d5c5c32a627e8648.txt)-->
    <a href="{{ '/'~ file.path }}">Télécharger</a> <!-- Passage hors controller mais chemin correct -->

    <a href="{{ path('app_file_upload_index') }}">back to list</a>

    <a href="{{ path('app_file_upload_edit', {'id': file.id}) }}">edit</a>

    {{ include('file_upload/_delete_form.html.twig') }}
{% endblock %}
